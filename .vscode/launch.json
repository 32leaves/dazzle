    "version": "0.2.0",
    "configurations": [
        {
            "name": "Dazzle example build",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${fileWorkspaceFolder}",
            "args": [
                "build",
                "--addr",
                "unix:///run/buildkit/buildkitd.sock",
                "--no-cache",
                "--context",
                "example",
                "localhost:5000/example-cache",
                "."
            ]
        }
    ]
}